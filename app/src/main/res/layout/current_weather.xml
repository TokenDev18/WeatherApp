<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A0BCE4"
    android:id="@+id/current_layout"
    android:clickable="true">

    <ImageView
        android:id="@+id/weather_image"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginRight="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="90dp"
        android:layout_toRightOf="@+id/humidity_value"
        android:layout_alignLeft="@+id/humidity_value"
        android:layout_alignStart="@+id/humidity_value" />

    <TextView
        android:id="@+id/temp_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:typeface="serif"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@id/weather_image"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/condition_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Condition"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/weather_image"
        android:layout_below="@+id/temp_text"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/humidity_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HValue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@+id/weather_image"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="50dp"/>
    
    <TextView
        android:id="@+id/humidity_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Humidity"
        android:textSize="16sp"
        android:layout_below="@id/humidity_value"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"/>

    <TextView
        android:id="@+id/precipitation_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/weather_image"
        android:layout_marginTop="160dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/precipitation_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_below="@id/precipitation_value"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/wind_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="WValue"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/weather_image"
        android:layout_marginTop="160dp"
        android:layout_toRightOf="@+id/precipitation_value"
        android:layout_marginLeft="60dp"/>

    <TextView
        android:id="@+id/wind_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wind"
        android:textSize="16sp"
        android:layout_below="@id/wind_value"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/precipitation_value"
        android:layout_marginLeft="60dp"/>

</RelativeLayout>